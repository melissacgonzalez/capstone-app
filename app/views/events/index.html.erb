<% @events.each do |event| %>
  <h3><a href="/events/<%= event.id %>"><%= event.name %></a> </h3>  
  <p><%= event.datetime.strftime("%A, %B %e, %Y at %l:%M %P") %></p>
  <% if event.event_type == "Race" || event.event_type == "Workout" %>
    <h4><%= event.distance %> <%= event.sport.name if event.sport %> starting at <%= event.location.name %></h4>   
  <% else %>
    <h4><%= event.location.name %></h4>
  <% end %>
  <br>
<% end %>