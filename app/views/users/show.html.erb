<h1><%= @user.first_name %> <%= @user.last_name %></h1>
<img src="<%= @user.avatar %>" width="250px">
<p><%= @user.bio %></p>
<h3>My Upcoming Races</h3>
<ul><% @races.each do |race|%>
  <li><a href="/events/<%= race.id %>"><%= race.name %> 
    <% if @user.registration_status(race.id) != "Registered" %>
      (<%= @user.registration_status(race.id) %>)
    <% end %>  </a>
  </li>
  <% end %>
</ul>

<h3>My Race Reports</h3>
<ul><% @user.reports.each do |report| %>
  <li><a href="/reports/<%= report.id %>"> <%= report.event.name %></a></li>
  <% end %>
</ul>


